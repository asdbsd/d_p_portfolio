<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Roboto" rel="stylesheet">

    <meta name="keywords" content="<%= @seo_keywords %>">

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <main role="main" class="container">
      <%= render 'shared/blog_nav' %>
      <p class="alert"><%= notice %></p>
      <%= render 'shared/blog_masthead' %>

      <div class="row mt-2">
        <%= yield %>
        <%= render 'blogs/sidebar' %>
      </div>
    </main>

    <%= render 'shared/blog_footer' %>

    <%= alerts %>

  </body>
</html>
